# ========================================
# OCTOPUS TRADING PLATFORM - SECURE ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# SECURITY: Generate secure secrets using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_SECRET_32_CHARS_MIN
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_JWT_SECRET_32_CHARS_MIN

# API Configuration - STANDARDIZED PORTS (Fixed conflicts)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database Configuration - STANDARDIZED (Fixed port conflicts)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration - STANDARDIZED (Fixed port conflicts)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# External API Keys (Add your actual keys here)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
NEWS_API_KEY=your-news-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Authentication & Security
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
SMTP_SSL=false

# Monitoring & Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
SENTRY_DSN=your-sentry-dsn

# File Storage
DATA_DIR=./data
LOGS_DIR=./logs
MODELS_DIR=./models
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# CORS Settings - SECURE (No wildcards)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Trading Configuration
DEFAULT_PORTFOLIO_VALUE=100000
MAX_POSITION_SIZE=0.1
RISK_FREE_RATE=0.05
DEFAULT_VOLATILITY=0.2

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_SECRET=CHANGE_ME_USE_SAME_AS_SECRET_KEY
NEXTAUTH_URL=http://localhost:3000

# Production Security Settings (Enable in production)
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# HSTS_MAX_AGE=31536000

# Development/Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test_trading_db
PYTEST_WORKERS=4
COVERAGE_THRESHOLD=80

# Production Overrides (uncomment and modify for production)
# ENVIRONMENT=production
# DEBUG=false
# API_RELOAD=false
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_trading_db
# REDIS_URL=redis://prod_redis_host:6379/0 