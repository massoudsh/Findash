{
  "dashboard": {
    "title": "Celery Workers & Task Monitoring",
    "tags": ["celery", "workers", "tasks", "redis", "pubsub"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Task Execution Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(celery_task_started_total[5m])",
            "legendFormat": "{{task_name}} - Started",
            "refId": "A"
          },
          {
            "expr": "rate(celery_task_succeeded_total[5m])",
            "legendFormat": "{{task_name}} - Succeeded",
            "refId": "B"
          },
          {
            "expr": "rate(celery_task_failed_total[5m])",
            "legendFormat": "{{task_name}} - Failed",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Tasks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Task Success vs Failure Rate",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(celery_task_succeeded_total[5m])) by (task_name)",
            "legendFormat": "{{task_name}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(celery_task_failed_total[5m])) by (task_name)",
            "legendFormat": "{{task_name}} - Failed",
            "refId": "B"
          }
        ]
      },
      {
        "id": 3,
        "title": "Task Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(celery_task_duration_seconds_bucket[5m]))",
            "legendFormat": "{{task_name}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(celery_task_duration_seconds_bucket[5m]))",
            "legendFormat": "{{task_name}} - p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Queue Length",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "celery_queue_length",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tasks"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Active Tasks per Worker",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "celery_worker_active_tasks",
            "legendFormat": "{{worker_name}} - {{queue}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Active Tasks"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Worker Pool Size",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum(celery_worker_pool_size) by (worker_name)",
            "legendFormat": "{{worker_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 4, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Redis Pub/Sub Message Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(celery_redis_pubsub_messages_total[5m])",
            "legendFormat": "{{channel}} - {{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Messages/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Pub/Sub Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(celery_redis_pubsub_latency_seconds_bucket[5m]))",
            "legendFormat": "{{channel}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(celery_redis_pubsub_latency_seconds_bucket[5m]))",
            "legendFormat": "{{channel}} - p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Task Allocation Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(celery_task_allocation_total[5m])",
            "legendFormat": "{{queue}} - {{worker}} - {{allocation_method}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Allocations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Queue Consumers",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "celery_queue_consumers",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Task Failure Rate by Exception",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "sum(rate(celery_task_failed_total[5m])) by (task_name, exception_type)",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "Failure Rate",
                "task_name": "Task",
                "exception_type": "Exception"
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}

